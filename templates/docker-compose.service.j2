[Unit]
Description = {{ _rpi_setup_docker_service.pretty_name }} service with Docker Compose
Requires = local-fs.target network.target remote-fs.target docker.service {{ _rpi_setup_docker_service.systemd_dependencies | d([], true) | join(' ') }}
After = local-fs.target network.target remote-fs.target docker.service {{ _rpi_setup_docker_service.systemd_dependencies | d([], true) | join(' ') }}

[Service]
Type = oneshot
RemainAfterExit = true
WorkingDirectory = {{ _rpi_setup_docker_service.project_path }}
ExecStart = /usr/bin/docker compose up -d --remove-orphans
ExecStop = /usr/bin/docker compose down
Restart = no

[Install]
WantedBy = multi-user.target
